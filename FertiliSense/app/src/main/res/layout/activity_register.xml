<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Create an Account"
        android:textColor="#BE29EC"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Just a few quick things to get started"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1" />

    <EditText
        android:id="@+id/username_field_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/border"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/username_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="USERNAME"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/username_field_register"
        app:layout_constraintStart_toStartOf="@id/username_field_register"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/email_field_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/border"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_field_register"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/email_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="EMAIL"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/email_field_register"
        app:layout_constraintStart_toStartOf="@id/email_field_register"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/radio_group_register_gender"
        android:layout_width="188dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/age_field_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_field_register"
        app:layout_constraintWidth_percent="0.4">

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="FEMALE"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="80dp"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="MALE"
            android:textColor="@color/black"
            android:textSize="11sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/gender_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="GENDER"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/radio_group_register_gender"
        app:layout_constraintStart_toStartOf="@id/radio_group_register_gender" />

    <EditText
        android:id="@+id/age_field_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/radio_group_register_gender"
        app:layout_constraintTop_toTopOf="@id/radio_group_register_gender"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/age_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="AGE"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/age_field_register"
        app:layout_constraintStart_toStartOf="@id/age_field_register" />

    <EditText
        android:id="@+id/date_field_register"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border"
        android:focusable="false"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group_register_gender"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/date_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="DATE OF BIRTH"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/date_field_register"
        app:layout_constraintStart_toStartOf="@id/date_field_register" />

    <EditText
        android:id="@+id/phone_field_register"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/border"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/date_field_register"
        app:layout_constraintTop_toTopOf="@id/date_field_register"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/phone_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="PHONE NUMBER"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/phone_field_register"
        app:layout_constraintStart_toStartOf="@id/phone_field_register"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/password_field_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/border"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_field_register"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/password_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="PASSWORD"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/password_field_register"
        app:layout_constraintStart_toStartOf="@id/password_field_register"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/confirm_password_field_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/border"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_field_register"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/confirm_password_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="CONFIRM PASSWORD"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/confirm_password_field_register"
        app:layout_constraintStart_toStartOf="@id/confirm_password_field_register"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CREATE ACCOUNT"
        android:backgroundTint="#BE29EC"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_field_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:text="Already have an account?"
        app:layout_constraintEnd_toStartOf="@id/login_link"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/register_button"
        app:layout_constraintTop_toBottomOf="@id/register_button" />

    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:text="Login"
        android:textColor="#BE29EC"
        app:layout_constraintEnd_toEndOf="@id/register_button"
        app:layout_constraintTop_toBottomOf="@id/register_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
